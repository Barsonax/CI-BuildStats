<svg xmlns="http://www.w3.org/2000/svg"
     style="shape-rendering: geometricPrecision;
            image-rendering: optimizeQuality;
            fill-rule: evenodd; 
            clip-rule: evenodd;" 
     width="{{ model.total_width }}" 
     height="{{ model.total_height }}" 
     fill="None">
  <g font-family="{{ model.font_family }}" font-size="{{ model.font_size }}" fill="{{ model.font_colour }}">

    <text x="{{ model.branch_text.x }}" y="{{ model.branch_text.y }}" font-weight="bold" fill="{{ model.branch_text_colour }}">{{ model.branch_text.text }}</text>

    {% if model.show_stats -%}
    <text x="{{ model.longest_build_text.x }}" y="{{ model.longest_build_text.y }}">{{ model.longest_build_text.text }}</text>
    <text x="{{ model.shortest_build_text.x }}" y="{{ model.shortest_build_text.y }}">{{ model.shortest_build_text.text }}</text>
    <text x="{{ model.average_build_text.x }}" y="{{ model.average_build_text.y }}">{{ model.average_build_text.text }}</text>
    {% endif -%}

    {% for build in model.builds -%}
    <rect id="{{ build.build_id }}" height="{{ build.height }}" width="{{ model.bar_width }}" y="{{ build.y }}" x="{{ build.x }}" stroke-width="0" fill="{{ build.colour }}" />
    {% endfor -%}
  </g>
</svg>